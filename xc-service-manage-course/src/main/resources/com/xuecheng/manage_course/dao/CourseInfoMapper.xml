<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xuecheng.manage_course.dao.CourseInfoMapper">
    <select id="findCourseList"
            resultType="com.xuecheng.framework.domain.course.ext.CourseInfo"
            parameterType="com.xuecheng.framework.domain.course.request.CourseListRequest">
      SELECT
        a.id id,
        a.name name,
        b.pic pic
      FROM
        course_base a,
        course_pic b
      WHERE
        a.id = b.courseid
    </select>
</mapper>